<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".Activity_reg">

    <include
        layout="@layout/toolbar_entry_reg"
        android:id="@+id/toolbar" />

    <EditText
        android:id="@+id/text_profile_first_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:hint="Имя"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_entry"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:id="@+id/text_profile_second_name"
        android:hint = "Фамилия"
        android:background="@color/colorWhite"
        android:layout_below="@+id/text_profile_first_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/text_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:hint="Логин"
        android:layout_below="@+id/text_profile_second_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/text_password1"
        android:hint = "Пароль"
        android:background="@color/colorWhite"
        android:layout_below="@+id/text_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/text_password2"
        android:hint = "Пароль"
        android:background="@color/colorWhite"
        android:layout_below="@+id/text_password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/str_button_reg"
        android:id="@+id/button_entry"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/text_password2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>