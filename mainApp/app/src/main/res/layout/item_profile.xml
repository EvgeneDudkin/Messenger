<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:id="@+id/r_1"
        android:layout_margin="20dp">

        <RelativeLayout
            android:id="@+id/relative_image_profile"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_account" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_image_profile"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/text_profile_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Login"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_profile_login"
                android:layout_margin="10dp"
                android:text="last message"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/r_1"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="Перейти/Создать диалог"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/button1"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:text="Добавить в друзья"
            android:textColor="@color/colorWhite"
            android:layout_alignLeft="@+id/button1"
            android:layout_alignStart="@+id/button1"
            android:layout_alignRight="@+id/button1"
            android:layout_alignEnd="@+id/button1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/button2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="Кнопочка"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

</RelativeLayout>